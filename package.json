{
  "name": "download-artifact",
  "version": "1.0.0",
  "description": "A GitHub Action to download a single artifact from a workflow run",
  "main": "src/main.ts",
  "scripts": {
    "build": "tsc",
    "format": "prettier --write '**/*.ts'",
    "format-check": "prettier --check '**/*.ts'",
    "package": "ncc build --source-map --license licenses.txt",
    "test": "vitest run --coverage",
    "update-snapshots": "vitest run --update",
    "all": "yarn run build && yarn run format && yarn run package && yarn test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/redhat-plumbers-in-action/download-artifact.git"
  },
  "keywords": [
    "github-action",
    "artifact-management"
  ],
  "author": "jamacku@redhat.com",
  "license": "MIT",
  "packageManager": "yarn@4.2.2",
  "dependencies": {
    "@actions/core": "1.10.1",
    "@actions/exec": "1.1.1",
    "@octokit/rest": "20.1.1",
    "zod": "3.23.8"
  },
  "devDependencies": {
    "@actions/github": "6.0.0",
    "@types/node": "20.12.11",
    "@vercel/ncc": "0.38.1",
    "@vitest/coverage-v8": "1.6.0",
    "prettier": "3.2.5",
    "ts-node": "10.9.2",
    "typescript": "5.4.5",
    "vitest": "1.6.0"
  }
}
